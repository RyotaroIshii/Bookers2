<h2>New book</h2>
<div class="form_box">
  <%= form_with model: @book, url: '/books', method: :post do |f| %>

  <div class="field">
  <label for=s"book_title">Title</label><br>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <label for="book_body">Body</label><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>
</div>