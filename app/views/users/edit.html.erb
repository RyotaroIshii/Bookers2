<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"user_name" %>
  <label for="user_image">Image</label>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <label for="user_introdaction">Introdaction</label>
  <%= f.text_area :introduction, id:"uesr_introduction" %>

  <%= f.submit "Update User" %>
<% end %>