
<div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <table class="user-table">
      <tbody>
        <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
        <tr>
	        <th>name</th>
	        <td><%= @user.name %></td>
        </tr>
        <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    
    <div class="row">
      <% if @user.id == current_user.id %>
        <li class="nav-item">
          <a class="nav-link" href="/users/edit"><i class="fas fa-user-cog"></i></a>
        </li>
      <% end %>
    </div>
    <h2 class="mt-3">New book</h2>
    <div class="form_box">
      <%= form_with model: @book, url: '/books', method: :post do |f| %>

      <div class="field">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
      </div>

      <div class="field">
      <label for="book_body">Body</label><br>
      <%= f.text_area :body %>
      </div>

      <div class="actions">
      <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>
  </div>
</div>